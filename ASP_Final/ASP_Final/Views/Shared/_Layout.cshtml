        <script>
                var acc = document.querySelector("#account");
                var user = document.querySelector("#userAccount");
                $(acc).click(function () {
                    if ($(user).css("display", "none")) {
                        $(user).style.display="block"
                    }
                    else
                    {
                        $(user).style.display = "none"
                    }
            })

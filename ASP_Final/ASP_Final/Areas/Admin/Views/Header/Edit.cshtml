@model ASP_Final.Models.Header
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<form action="/Admin/Header/Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextAreaFor(m => m.Title, new { @class = "form-control", id = "content" })
        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content)
        @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", type = "file" })
        @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
    </div>

    @*<div class="form-group">
            @Html.TextBoxFor(m => m.LogoImage, new { @class = "form-control", type="hidden" })

        </div>*@

    <div class="form-group">
        <label>Current Image:</label>
        <img src="~/Assets/img/@Model.Image" style="height:80px; object-fit:contain" />
    </div>
    <input type="submit" class="btn btn-outline-success" value="Edit" />
    <a href="/Admin/Header/Index" class="btn btn-outline-primary">Back To List</a>
</form>

@section scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/12.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#content'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

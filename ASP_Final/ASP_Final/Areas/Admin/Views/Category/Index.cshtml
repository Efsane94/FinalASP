@model IEnumerable<ASP_Final.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<a href="Create" class="btn btn-primary" style="margin-bottom:15px;">Create New</a>
<table class="table table-bordered">
    
        <thead>
            <tr>
                <th style="font-size:18px; font-weight:bold;">Category Name</th>
                <th style="font-size:18px; font-weight:bold;">Edit</th>
                <th style="font-size:18px; font-weight:bold;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-size:16px;">@item.Name</td>
                    <td>
                        <a href="Category/Edit/@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                    </td>
                    <td>
                        <a href="Category/Delete/@item.Id" class="btn btn-danger"><i class="far fa-edit"></i></a>
                    </td>


                </tr>
            }
        </tbody>
    
</table>


